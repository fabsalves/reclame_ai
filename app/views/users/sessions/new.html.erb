<div class="container">
  <div class="row">
    <div class="col-md-12">
      <h2>Log in</h2>
    </div>
  </div>
</div>
<div class="container">
  <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="row">
      <div class="col-md-6">
        <div class="form-group">
          <%= f.input :email, required: false, autofocus: true, input_html: { autocomplete: "email" }, class: 'form-control' %>
        </div>
      </div>
    </div>
    <div class="row">
      <div class="col-md-12">
        <div class="form-group">
          <%= f.input :password, required: false, input_html: { autocomplete: "current-password" }, class: 'form-control' %>
        </div>
      </div>
    </div>

    <div class="row">
      <div class="col-md-12">
        <div class="form-group">
          <%= f.input :remember_me, as: :boolean, class: 'form-control' if devise_mapping.rememberable? %>
        </div>
      </div>
    </div>

    <div class="row">
      <div class="form-actions">
        <%= f.button :submit, "Log in", class: 'btn btn-primary btn-block' %>
      </div>
    </div>
  <% end %>
</div>
